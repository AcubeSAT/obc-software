[settings]
arch=armv7
build_type=Debug
compiler=clang
compiler.version=13
compiler.cppstd=gnu17
os=baremetal

[buildenv]
CC=/usr/bin/clang
CXX=/usr/bin/clang++
AR=/usr/bin/llvm-ar
AS=/usr/bin/llvm-as
RANLIB=/usr/bin/llvm-ranlib

[conf]
tools.build:cxxflags=["-target arm-none-eabi -mcpu=cortex-m7 -mthumb -mthumb-interwork -ffunction-sections -fdata-sections -g -fno-common -fmessage-length=0 -specs=nosys.specs -specs=nano.specs -mfloat-abi=hard -mfpu=fpv5-d16"]
tools.build:cflags=["-target arm-none-eabi -mcpu=cortex-m7 -mthumb -mthumb-interwork -ffunction-sections -fdata-sections -g -fno-common -fmessage-length=0 -specs=nosys.specs -specs=nano.specs -mfloat-abi=hard -mfpu=fpv5-d16"]
tools.build:exelinkflags=["-Wl,-gc-sections"]